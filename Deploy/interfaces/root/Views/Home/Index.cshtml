
@model DBApp.Models.DataBag
@{
    ViewBag.Title = "Home Page";
}


<div class="jumbotron">
    <h1>@ViewBag.Header</h1>
    <p class="lead">See how much you can save</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Annual Interest Trend</h2>
        <p><img src="@Url.Action("InterestChart")" /> </p>
        <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301865">Learn more &raquo;</a></p>
    </div>
    <div class="col-md-6">
        @using (Html.BeginForm("WhatIf", "Home", FormMethod.Post))
        { 
        <table border="0" cellpadding="3" cellspacing="1" width="100%">
            <tr valign="top">
                <td>
                    @Html.LabelFor(model => model.Account.Balance) 
                    @Html.TextBoxFor(model => model.Account.Balance)
                </td>
            </tr>
            <tr valign="top">
                <td>
                    @Html.LabelFor(model => model.Account.Deposit)
                    @Html.TextBoxFor(model => model.Account.Deposit)
                </td>
            </tr>
        </table>
        <div style="text-align:right;">
            <input type="submit" id="btnRun" value="Run" />
        </div>
       }
    </div>
    
</div>